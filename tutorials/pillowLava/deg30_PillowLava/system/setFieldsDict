FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.lava 0
    volScalarFieldValue T 300
);

regions
(
    boxToCell
    {
        box (80 0 0) (100 10 12);
        fieldValues
        (
            volScalarFieldValue alpha.lava 1
            volScalarFieldValue T 1200
        );
    }
);


